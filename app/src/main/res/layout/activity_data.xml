<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_passenger"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bag"
    android:orientation="vertical"
    tools:context="com.xaqianbai.QBHotelSecurutyGovernor.Activity.PassengerActivity">

    <include layout="@layout/pub_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingRight="@dimen/padding_en"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                >

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@color/main" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_en"
                    android:text="辖区名称"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_smalls_size"
                    />

                <EditText
                    android:id="@+id/edit_org_org"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="请选择管辖机构..."
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/textview_small_size"
                    android:textColor="@color/viewfinder_frame"
                    android:gravity="right|center"
                    android:longClickable="false"
                    />

                <ImageView
                    android:id="@+id/img_clear_org_org"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/delete_edit"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_gravity="center"
                    />


            </LinearLayout>












        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/padding_en"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_en"
                android:text="选择时间"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_smalls_size"
                />

            <EditText
                android:id="@+id/edit_time_org"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:focusable="false"
                android:gravity="right|center"
                android:layout_weight="1"
                android:hint="请选择时间..."
                android:textColorHint="@color/text"
                android:textSize="@dimen/textview_small_size"
                android:textColor="@color/viewfinder_frame"
                android:longClickable="false"
                />
            <ImageView
                android:id="@+id/img_clear_start_org"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete_edit"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/padding"
                />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_quary_org"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_button_selector"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="@dimen/textview_normal_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

</LinearLayout>