<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_passenger"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bag"
    android:orientation="vertical"
    tools:context="com.xaqb.hotel.Activity.PassengerActivity">

    <include layout="@layout/pub_titlebar" />






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="@dimen/padding"
                >

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@color/main" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/must_write"
                    android:gravity="center"
                    android:padding="@dimen/padding_en"
                    android:text="旅客类型"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_smalls_size" />


                <EditText
                    android:id="@+id/et_per_type_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="right|center"
                    android:hint="请选择旅客类型..."
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_small_size"
                    />

                <ImageView
                    android:id="@+id/img_clear_ptype_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/delete_edit"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/padding"
                    />



            </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:paddingRight="@dimen/padding_en"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_en"
                android:text="旅客姓名"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_smalls_size" />

            <EditText
                android:id="@+id/edit_name_passenger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="right|center"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_small_size" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/padding_en"
        >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_en"
            android:text="证件类型"
            android:textColor="@color/viewfinder_frame"
            android:textSize="@dimen/textview_smalls_size" />



        <EditText
            android:id="@+id/et_iden_type_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="false"
            android:gravity="right|center"
            android:hint="请选择证件类型..."
            android:textColor="@color/viewfinder_frame"
            android:textSize="@dimen/textview_small_size"
            />

        <ImageView
            android:id="@+id/img_clear_identype_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/delete_edit"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/padding"
            />


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:paddingRight="@dimen/padding_en"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_en"
                android:text="证件证号"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_smalls_size" />

            <EditText
                android:id="@+id/edit_iden_passenger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right|center"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_small_size" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:paddingRight="@dimen/padding_en"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_en"
                android:text="联系电话"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_smalls_size" />

            <EditText
                android:id="@+id/edit_tel_passenger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="right|center"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_small_size" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:paddingRight="@dimen/padding_en"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_en"
                android:text="查询时间"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_smalls_size" />

            <EditText
                android:id="@+id/edit_date_passenger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="false"
                android:gravity="right|center"
                android:hint="请选择查询时间..."
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_small_size"
                />

            <ImageView
                android:id="@+id/img_clear_date_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/delete_edit"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/padding"
                />

        </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <Button

        android:id="@+id/btn_quary_passenger"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_button_selector"
        android:text="查询"
        android:textColor="@color/white"
        android:textSize="@dimen/textview_normal_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

</LinearLayout>