<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="12dp">


        <TextView
            android:id="@+id/txt_hname_crime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/main"
            android:textSize="@dimen/textview_normal_size" />

        <TextView
            android:id="@+id/txt_date_crime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/default_divider_padding"
            android:drawableRight="@mipmap/click"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/textview_smalls_size"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_type_one_crime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bg"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="#刑事案件"
            android:padding="2dp"
            />


        <TextView
            android:id="@+id/txt_type_two_crime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bg"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="#抢劫案"
            android:padding="2dp"
            />

    </LinearLayout>


    <LinearLayout style="@style/common_horizontal_match_line_style"></LinearLayout>


    <TextView
        android:id="@+id/txt_del_crime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/list_line"
        android:text="暂无描述"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <LinearLayout
        style="@style/common_horizontal_division_line_style_list"
        android:layout_marginTop="@dimen/activity_horizontal_margin"></LinearLayout>


</LinearLayout>