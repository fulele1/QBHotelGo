<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_approve_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_cert_pic"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/acq_iden" />

    <LinearLayout
        android:id="@+id/linear_card"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/front_image"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/shape_bt"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/iv_face_photo"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:gravity="center"
            android:scrollbars="vertical"
            android:text="请读证"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_Face_pic"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_readSAMID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读模块号"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_readIDCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:text="读身份证"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_readFinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读指纹"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_faceReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:text="人脸识别"
            android:textColor="#ffffff" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_button"
        android:text="提交认证"
        android:textColor="#ffffff" />
</LinearLayout>
