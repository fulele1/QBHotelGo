<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_edge"
            android:gravity="center"
            android:text="真实姓名"
            android:textSize="@dimen/textview_normal_size" />

        <TextView
            android:id="@+id/tv_cert_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_edge"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:textSize="@dimen/textview_normal_size" />
    </LinearLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_edge"
            android:gravity="center"
            android:text="证件类型"
            android:textSize="@dimen/textview_normal_size" />

        <TextView
            android:id="@+id/tv_cert_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_edge"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:textSize="@dimen/textview_normal_size" />

    </LinearLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_edge"
            android:gravity="center"
            android:text="身份证号"
            android:textSize="@dimen/textview_normal_size" />

        <TextView
            android:id="@+id/tv_cert_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_edge"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:textSize="@dimen/textview_normal_size" />
    </LinearLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />


</LinearLayout>