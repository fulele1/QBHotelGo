<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_approve_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bag"
    android:orientation="vertical"
    >

    <include layout="@layout/pub_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:text="真实姓名:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_cert_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="10px"
                    android:paddingLeft="12dp"
                    android:gravity="left"
                    android:textSize="@dimen/textview_small_size"
                    android:padding="@dimen/activity_horizontal_margin"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:text="性        别:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_sex_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="10px"
                    android:textSize="@dimen/textview_small_size"
                    android:padding="@dimen/activity_horizontal_margin"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:text="民        族:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_nation_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="10px"
                    android:textSize="@dimen/textview_small_size"
                    android:padding="@dimen/activity_horizontal_margin"
                    />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:text="证件类型:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_cert_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="10px"
                    android:textSize="@dimen/textview_small_size"
                    android:padding="@dimen/activity_horizontal_margin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:text="证件号码:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />


                <TextView
                    android:id="@+id/tv_cert_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="10px"
                    android:paddingLeft="12dp"
                    android:textSize="@dimen/textview_small_size"
                    android:padding="@dimen/activity_horizontal_margin"

                    />

            </LinearLayout>














            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="证件照片"
                        android:textSize="@dimen/textview_small_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="人脸照片"
                        android:textSize="@dimen/textview_small_size" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    >

                    <ImageView
                        android:id="@+id/iv_cert_info"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_face_info"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/button_normal_sizes"
                        />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>



