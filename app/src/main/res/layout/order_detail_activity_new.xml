<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_order_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@mipmap/acq_side"
            android:layout_margin="@dimen/activity_horizontal_margin"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单信息"
                android:textColor="@color/result_view"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/padding"
                android:textSize="@dimen/textview_normal_size"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/point_line"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:gravity="center"
                    android:text="订单编号："
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="10px"
                    android:gravity="center_vertical"
                    android:paddingLeft="10px"
                    android:textSize="@dimen/textview_small_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingRight="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:gravity="center"
                    android:text="下单时间："
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="10px"
                    android:gravity="center_vertical"
                    android:paddingLeft="10px"
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/main"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information"
                android:padding="@dimen/activity_horizontal_margin"
                android:textColor="@color/result_view"
                android:textSize="@dimen/textview_normal_size"

                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/point_line"
            />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    >
    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@null"
        android:drawablePadding="10px"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/activity_title"
        android:text="张三"
        android:textColor="@color/result_view"
        />


    <TextView
        android:id="@+id/tv_order_phone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="right|center_vertical"
        android:text="4654564845"
        android:textColor="@color/main"
        android:textSize="@dimen/textview_small_size"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

</LinearLayout>

        <TextView
            android:id="@+id/tv_order_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/textview_small_size"
            android:text="其实我也不知道会飞的撒娇陈女士的家伙可视对讲覅就U盾恢复的后代撒谎"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:paddingRight="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_edge"
                android:gravity="center"
                android:text="锁具类型："
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_lock_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="10px"
                android:gravity="center_vertical"
                android:paddingLeft="10px"
                android:textSize="@dimen/textview_small_size"
                android:textColor="@color/main"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:paddingRight="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_edge"
                android:gravity="center"
                android:text="开锁费用："
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_order_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="10px"
                android:gravity="center_vertical"
                android:paddingLeft="10px"
                android:textSize="@dimen/textview_small_size"
                android:textColor="#e55b55"
                />
        </LinearLayout>

        <LinearLayout style="@style/common_horizontal_match_blod_line_style"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/main"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post_pic"
                android:padding="@dimen/activity_horizontal_margin"
                android:textColor="@color/result_view"
                android:textSize="@dimen/textview_normal_size"

                />

        </LinearLayout>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/acq_side_3"
            android:layout_margin="@dimen/activity_horizontal_margin"
            >



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/iv_user_face"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    />

                <ImageView
                    android:id="@+id/iv_lock_pic"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="人脸照片"
                    android:textSize="@dimen/textview_small_size"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="门锁照片"
                    android:textSize="@dimen/textview_small_size" />
            </TableRow>

        </TableLayout>


        <com.xaqb.unlock.Views.ListViewForScroollView
            android:id="@+id/lv_pay_record"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/main"
            >


        <Button
        android:id="@+id/bt_pay_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_edge"
        android:layout_marginRight="@dimen/margin_edge"
        android:layout_weight="1"
        android:background="@null"
        android:text="现金支付"
        android:textColor="#ffffff"
        android:textSize="@dimen/textview_normal_size"
            android:visibility="gone"
            />

        <Button
        android:id="@+id/bt_pay_online"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_edge"
        android:layout_marginRight="@dimen/margin_edge"
        android:layout_weight="1"
        android:background="@null"
        android:text="在线支付"
        android:textColor="#ffffff"
        android:textSize="@dimen/textview_normal_size"
            android:visibility="gone"
            />

        <Button
        android:id="@+id/bt_pay_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_edge"
        android:layout_marginRight="@dimen/margin_edge"
        android:layout_weight="1"
        android:background="@null"
        android:text="支付查询"
        android:textColor="#ffffff"
        android:textSize="@dimen/textview_normal_size" />
        </LinearLayout>



        <!--<Button-->
            <!--android:id="@+id/bt_pay_status"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_marginLeft="@dimen/margin_edge"-->
            <!--android:layout_marginRight="@dimen/margin_edge"-->
            <!--android:background="@drawable/bg_button_selector"-->
            <!--android:text="支付查询"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="@dimen/textview_normal_size" />-->

    </LinearLayout>
</ScrollView>