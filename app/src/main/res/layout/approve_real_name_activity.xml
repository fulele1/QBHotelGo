<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_approve_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:drawableLeft="@mipmap/little_star"
                    android:text="证件类型:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/bg_edittext">

                    <TextView
                        android:id="@+id/tv_userinfo_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/activity_horizontal_margin"
                        android:text="请选择证件类型"
                        android:textSize="@dimen/textview_small_size"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/sp_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="@dimen/margin_edge"
                        android:layout_marginLeft="@dimen/margin_edge"
                        android:layout_marginRight="@dimen/margin_edge"
                        android:gravity="right" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:drawableLeft="@mipmap/little_star"
                    android:text="真实姓名:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />

                <EditText
                    android:id="@+id/et_real_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="10px"
                    android:hint="请输入真实姓名"
                    android:paddingLeft="12dp"
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:drawableLeft="@mipmap/little_star"
                    android:text="证件号码:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />


                <EditText
                    android:id="@+id/et_card_num"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="10px"
                    android:hint="请输入证件号码"
                    android:paddingLeft="12dp"
                    android:textSize="@dimen/textview_small_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:drawableLeft="@mipmap/little_star"
                    android:text="性        别:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/bg_edittext">

                    <Spinner
                        android:id="@+id/sp_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="@dimen/margin_edge"
                        android:layout_marginLeft="@dimen/margin_edge"
                        android:layout_marginRight="@dimen/margin_edge"
                        android:gravity="right" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:drawableLeft="@mipmap/little_star"
                    android:text="民        族:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/bg_edittext">


                    <Spinner
                        android:id="@+id/sp_nation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_margin="@dimen/margin_edge"
                        android:layout_marginLeft="@dimen/margin_edge"
                        android:layout_marginRight="@dimen/margin_edge"
                        android:gravity="right" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:drawableLeft="@mipmap/little_star"
                    android:text="民　　族:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />

                <EditText
                    android:id="@+id/et_card_nation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="10px"
                    android:hint="请输入民族"
                    android:paddingLeft="12dp"
                    android:textSize="@dimen/textview_small_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ll_background_no_radius"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginLeft="@dimen/margin_edge"
                    android:drawableLeft="@mipmap/little_star"
                    android:text="年　　龄:"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_normal_size" />

                <EditText
                    android:id="@+id/et_card_age"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext"
                    android:drawablePadding="10px"
                    android:hint="请输入年龄"
                    android:paddingLeft="12dp"
                    android:textSize="@dimen/textview_small_size" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding"
                android:layout_marginLeft="@dimen/margin_edge"
                android:drawableLeft="@mipmap/little_star"
                android:text="照片采集:"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_normal_size"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="证件照片"
                        android:textSize="@dimen/textview_small_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="人脸照片"
                        android:textSize="@dimen/textview_small_size" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_cert_pic"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:src="@mipmap/iden_per" />

                    <ImageView
                        android:id="@+id/iv_face_pic"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:src="@mipmap/acq_per" />
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding"
                android:layout_marginLeft="@dimen/margin_edge"
                android:drawableLeft="@mipmap/little_star"
                android:text="电子签名:"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_normal_size"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                />

            <ImageView
                android:id="@+id/iv_sign_approve"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:src="@mipmap/sign_pic"
                />

            <Button
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30px"
                android:background="@drawable/bg_str_bt_selector"
                android:text="提交认证"
                android:textColor="#ffffff"
                android:textSize="@dimen/button_normal_size" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>