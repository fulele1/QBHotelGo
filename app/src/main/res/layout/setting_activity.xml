<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_edge"
            android:gravity="center"
            android:text="新消息通知"
            android:textSize="@dimen/textview_normal_size" />

    </LinearLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />

    <LinearLayout
        android:id="@+id/ll_reset_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ll_background_no_radius"
        android:gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_edge"
            android:gravity="left|center_vertical"
            android:text="修改密码"
            android:textSize="@dimen/textview_normal_size" />
    </LinearLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />

    <Button
        android:id="@+id/bt_quit_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="@drawable/bg_button_selector"
        android:padding="5dp"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="@dimen/button_normal_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="15" />
</LinearLayout>