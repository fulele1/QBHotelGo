<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_passenger"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bag"
    android:orientation="vertical"
    tools:context="com.xaqianbai.QBHotelSecurutyGovernor.Activity.PassengerActivity">

    <include layout="@layout/pub_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_en"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可疑人员"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_smalls_size" />

            <EditText
                android:id="@+id/edit_name_clue_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_smalls_size"
                android:gravity="right"
                android:focusable="false"
                android:text="zanjk"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_en">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_smalls_size"
                />

            <EditText
                android:id="@+id/edit_tel_clue_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/textview_smalls_size"
                android:gravity="right"
                android:focusable="false"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_en"
                    android:text="联系地址"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_smalls_size"
                    />


                <EditText
                    android:id="@+id/edit_provence_clue_del"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_smalls_size"
                    android:gravity="right|center"
                    android:focusable="false"
                    android:text="省市区"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_en"
                >

                <EditText
                    android:id="@+id/edit_street_clue_del"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="街道"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/textview_small_size"
                    android:textColor="@color/viewfinder_frame"
                    android:gravity="left"
                    />
            </LinearLayout>




    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:orientation="vertical"


            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_en"
                    android:text="详情描述"
                    android:textColor="@color/viewfinder_frame"
                    android:textSize="@dimen/textview_smalls_size"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_en"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/edit_del_clue_del"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="拒绝提供身份证信息"
                    android:textColorHint="@color/text"
                    android:textSize="@dimen/textview_small_size"
                    android:textColor="@color/viewfinder_frame"
                    android:gravity="left"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/img_per1_del_clue"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/shadow_width"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/img_per2_del_clue"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/shadow_width"
                        android:visibility="gone"

                        />

                    <ImageView
                        android:id="@+id/img_per3_del_clue"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/shadow_width"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:visibility="gone"

                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



    </LinearLayout>


