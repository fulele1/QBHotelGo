<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"
            android:src="@mipmap/chouti" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_zxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@mipmap/zxing" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/ou_headpic_main"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/per" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="@color/viewfinder_frame"
                        android:textSize="@dimen/textview_normal_size" />

                    <TextView
                        android:id="@+id/soname_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textview_smallx_size" />

                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_en"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/functions"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/activity_horizontal_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@mipmap/shadow"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/hotel_count_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="2333"
                        android:textColor="@color/viewfinder_frame"
                        android:textSize="@dimen/textview_normal_size" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="企业数量"
                        android:textSize="@dimen/textview_small_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/staff_count_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2333"
                        android:textColor="@color/viewfinder_frame"
                        android:textSize="@dimen/textview_normal_size" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="从业人员"
                        android:textSize="@dimen/textview_small_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >


                    <TextView
                        android:id="@+id/hotel_tourist_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2333"
                        android:textColor="@color/viewfinder_frame"
                        android:textSize="@dimen/textview_normal_size" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="在住人数"
                        android:textSize="@dimen/textview_small_size" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="@string/function"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/activity_horizontal_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal"
                android:layout_margin="@dimen/padding"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@mipmap/mp_bg"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="各民族入住比例"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_en"
                        />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="5dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/unline_device_main"
                            android:layout_centerHorizontal="true"
                            android:drawableLeft="@mipmap/han"
                            android:gravity="center"
                            android:text="汉族"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/button_normal_sizes"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:drawableLeft="@mipmap/others"
                            android:gravity="center"
                            android:text="维族"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/button_normal_sizes"
                            />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="25dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:drawableLeft="@mipmap/wei"
                            android:gravity="center"
                            android:text="藏族"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/button_normal_sizes"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:drawableLeft="@mipmap/zang"
                            android:gravity="center"
                            android:text="其他"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/button_normal_sizes"
                            />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="0dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@mipmap/mp_bg"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="西安市今日入住率"
                        android:gravity="center"
                        android:paddingTop="@dimen/padding_en"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/activity_horizontal_margin"

                        >

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/progress_main"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/progress_text_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            />

                    </RelativeLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/unline_device_main"
                            android:layout_centerHorizontal="true"
                            android:drawableLeft="@mipmap/used"
                            android:text="已入住"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:drawablePadding="1dp"
                            android:id="@+id/textView" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:drawableLeft="@mipmap/to_use"
                            android:text="未入住"
                            android:layout_gravity="center"
                            android:gravity="center"

                            />


                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="旅客七日入住趋势图"
                android:textColor="@color/viewfinder_frame"
                android:textSize="@dimen/activity_horizontal_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@mipmap/sh_three"
                >

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_line_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/meun_bag"
        android:gravity="center|bottom"
        android:paddingBottom="@dimen/button_normal_sizes"
        >

        <TextView
            android:id="@+id/txt_passenger_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/menu_passenger"
            android:gravity="center|bottom"
            android:text="旅客查询"
            />

        <TextView
            android:id="@+id/txt_staff_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/menu_staff"
            android:gravity="center|bottom"
            android:text="从业人员" />

        <TextView
            android:id="@+id/txt_hotel_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/menu_hotel"
            android:gravity="center|bottom"
            android:text="酒店统计" />

        <TextView
            android:id="@+id/txt_data_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/menu_data"
            android:gravity="center|bottom"
            android:text="辖区统计" />

        <TextView
            android:id="@+id/txt_order_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/meun_order"
            android:gravity="center|bottom"
            android:text="订单详情" />


    </LinearLayout>

</LinearLayout>
