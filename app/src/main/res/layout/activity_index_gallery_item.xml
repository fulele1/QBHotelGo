<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lay_galler_item"
    android:background="#fefefe"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_com_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9月18日"
            android:textColor="@color/viewfinder_frame"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  入住                "
            android:textSize="@dimen/textview_smallx_sizes"
            />


        <TextView
            android:id="@+id/txt_days_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共一天"
            android:background="@mipmap/to"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/activity_horizontal_margins"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                离店  "
            android:textSize="@dimen/textview_smallx_sizes"

            />
        <TextView
            android:id="@+id/txt_go_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9月19日"
            android:textColor="@color/viewfinder_frame"
            />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="@dimen/activity_horizontal_margin"
        >
        <ImageView
            android:id="@+id/img_pic_del"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/txt_hotel_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="香格里拉酒店"
            android:textSize="@dimen/textview_smallx_size"
            />

        <TextView
            android:id="@+id/txt_room_num_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17095房间"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textview_smallx_size"
            />

    </RelativeLayout>


</LinearLayout>